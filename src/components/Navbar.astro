---
import pokeball from '../assets/pokeball.svg';
import ThemeSwitcher from '../components/ThemeSwitcher.astro';
---

<div
  class="w-full bg-zinc-200 dark:bg-zinc-800 py-5 px-5 flex items-center justify-between relative overflow-hidden"
>
  <!-- LEFT -->
  <div class="flex justify-center gap-2">
    <img src={pokeball.src} alt="Pokeball" class="w-10 h-10" />
    <h1 class="text-3xl font-bold text-center">Pokedex</h1>
  </div>

  <!-- RIGHT -->
  <div class="flex justify-center gap-2">
    <ThemeSwitcher />
  </div>

  <div class="bg-red-500 w-1/2 h-96 absolute -right-10 rotate-[20deg]"></div>
</div>
